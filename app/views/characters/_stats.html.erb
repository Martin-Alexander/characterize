<div class="character-build">
  <div class="build-form">
    <%= simple_form_for @character, html: {id: "attributes"} do |f| %>
      <%= f.label :name, "Name", id: "name-label"%>
      <%= f.input_field :name, as: :string, class:"form-control" %>
      <%= f.label :race, "Race" %>
      <%= f.input_field :race, as: :select, collection: @races, class:"form-control", id:"race" %>
      <%= f.label :job, "Class" %>
      <%= f.input_field :job, as: :select, collection: @jobs, class:"form-control" %>
      <%= f.label :background, "Background" %>
      <%= f.input_field :background, as: :select, collection: @backgrounds.keys, id: "background", class:"form-control" %>
      <%= f.label :alignment, "Alignment" %>
      <%= f.input_field :alignment, as: :select, collection: @alignments, class:"form-control" %>
      <%= f.label :personality_traits, "Personality Traits" %>
      <%= f.input_field :personality_traits, as: :select, collection: [], id: "personality_traits", class:"form-control", multiple: true %>
      <%= f.label :ideal, "Ideals" %>
      <%= f.input_field :ideal, as: :select, collection: [], id: "ideals", class:"form-control" %>
      <%= f.label :bond, "Bonds" %>
      <%= f.input_field :bond, as: :select, collection: [], id: "bonds", class:"form-control" %>
      <%= f.label :flaw, "Flaws" %>
      <%= f.input_field :flaw, as: :select, collection: [], id: "flaws", class:"form-control" %>
      <%= f.button :button, "CONFIRM", id:"confirm" %>
    <% end %>
  <div id="character_attributes" data-character_attributes="<%= JSON.generate(@backgrounds) %>"></div>
  </div>
</div>

