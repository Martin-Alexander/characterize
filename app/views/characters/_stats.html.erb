<% if false %>
    <div class="build-form">
      <%= simple_form_for @character, html: {id: "attributes"} do |f| %>
        <%= f.label :name, "Name", id: "name-label"%>
        <%= f.input_field :name, as: :string, class:"form-control" %>
        <%= f.label :race, "Race" %>
        <%= f.input_field :race, as: :select, collection: @races, class:"form-control", id:"race" %>
        <%= f.label :job, "Class" %>
        <%= f.input_field :job, as: :select, collection: @jobs, class:"form-control" %>
        <%= f.label :background, "Background" %>
        <%= f.input_field :background, as: :select, collection: @backgrounds.keys, id: "background", class:"form-control" %>
        <%= f.label :alignment, "Alignment" %>
        <%= f.input_field :alignment, as: :select, collection: @alignments, class:"form-control" %>
        <%= f.label :personality_traits, "Personality Traits" %>
        <%= f.input_field :personality_traits, as: :select, collection: [], id: "personality_traits", class:"form-control", multiple: true %>
        <%= f.label :ideal, "Ideals" %>
        <%= f.input_field :ideal, as: :select, collection: [], id: "ideals", class:"form-control" %>
        <%= f.label :bond, "Bonds" %>
        <%= f.input_field :bond, as: :select, collection: [], id: "bonds", class:"form-control" %>
        <%= f.label :flaw, "Flaws" %>
        <%= f.input_field :flaw, as: :select, collection: [], id: "flaws", class:"form-control" %>
        <%= f.button :button, "CONFIRM", id:"confirm" %>
      <% end %>
    </div>
<% end %>

<div id="character_attributes" data-character_attributes="<%= JSON.generate(@backgrounds) %>"></div>

<div class="character-build" style="margin-top: 130px;">
  <%= form_tag characters_path, method: :post do %>
    <%= text_field_tag "name" %>

    <div id="race-selection">
      <% @races.each do |race| %>
        <div class="character-choice" data-parent_id="race-selection">
          <%= radio_button_tag "race", race, id: "race-#{race}" %>
          <%= label_tag "race-#{race}", race.capitalize %>
        </div>
      <% end %>
    </div>
    
    <div id="job-selection" style="display: none;">
      <% @jobs.each do |job| %>
        <div class="character-choice" data-parent_id="job-selection">
          <%= radio_button_tag "job", job, id: "job-#{job}" %>
          <%= label_tag "job-#{job}", job.capitalize %>
        </div>
      <% end %>
    </div>

    <div id="background-selection" style="display: none;">
      <% @backgrounds.keys.each do |background| %>
        <div class="character-choice" data-parent_id="background-selection" data-value="<%= background %>">
          <%= radio_button_tag "background", background, id: "background-#{background}" %>
          <%= label_tag "background-#{background}", background.capitalize %>
        </div>
      <% end %>
    </div>

    <div id="alignment-selection" style="display: none;">
      <% @alignments.each do |alignment| %>
        <div class="character-choice" data-parent_id="alignment-selection">
          <%= radio_button_tag "alignment", alignment, id: "alignment-#{alignment}" %>
          <%= label_tag "alignment-#{alignment}", alignment.capitalize %>
        </div>
      <% end %>
    </div>    

    <div id="personality_traits-selection" style="display: none;">
    </div>

    <div id="ideal-selection" style="display: none;">
    </div>

    <div id="bond-selection" style="display: none;">
    </div>

    <div id="flaw-selection" style="display: none;">
    </div>

    <%= submit_tag %>
  <% end %>
</div>