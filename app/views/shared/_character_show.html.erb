<div class="card character-show-container">
  <div class="character-show-inner-container">
    <div>
      <!-- name and description -->
      <div id="character_name">
        <%= @character.name.upcase %>
      </div>
      <div>
        <div class="desc">
          <%= @character.story %>
          <div class="background">
            <p>Background: <%= @character.background %></p>
            <p>Personality traits: <%= @character.personality_traits %></p>
            <p>Ideal: <%= @character.ideal %></p>
            <p>Bond: <%= @character.bond %></p>
            <p>Flaw: <%= @character.flaw %></p>
          </div>
        </div>
      </div>
    </div>
    <div>
      <!-- image -->
      <%= image_tag @character.photo, class:"image" %>
    </div>
  </div>
</div>
